{
  "kind": "collectionType",
  "collectionName": "user_infos",
  "info": {
    "singularName": "user-info",
    "pluralName": "user-infos",
    "displayName": "UserInfo"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Физическое лицо",
        "Юридическое лицо"
      ]
    },
    "last_name": {
      "type": "string"
    },
    "middle_name": {
      "type": "string"
    },
    "number": {
      "type": "string",
      "regex": "^((8|\\+7)[\\- ]?)?(\\(?\\d{3}\\)?[\\- ]?)?[\\d\\- ]{7,10}$"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "mappedBy": "user_info"
    }
  }
}
